= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
  .field
    %label
      = f.label :name
    = f.text_field :name
  .field
    %label= f.label :environment
    = f.select :environment, [['live', 'live'], ['stage', 'stage'], ['integration', 'integration']]
  .field
    %label
      = f.label :platform
    = f.text_field :platform
  .actions
    = f.submit
